# =============================================
# Onstage Backend Environment Variables
# =============================================
# Copy to .env and fill in values

# Server
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# =============================================
# Database (REQUIRED)
# =============================================
# Railway will auto-inject DATABASE_URL when you add PostgreSQL
DATABASE_URL=postgresql://user:pass@localhost:5432/onstage

# =============================================
# Supabase (Optional - for storage/auth)
# =============================================
# SUPABASE_URL=https://xxx.supabase.co
# SUPABASE_ANON_KEY=your_anon_key
# SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# =============================================
# Redis (Optional - for caching)
# =============================================
# REDIS_URL=redis://localhost:6379

# =============================================
# Gemini API (REQUIRED)
# =============================================
# Vertex AI API Key from Google Cloud Console
GEMINI_API_KEY=your_vertex_ai_api_key

# Enable Vertex AI endpoint (default: true)
VERTEX_AI_ENABLED=true

# =============================================
# Sora 2 API (Optional)
# =============================================
# OpenAI API Key with Sora 2 access
SORA_API_KEY=your_openai_api_key

# Sora model version (default: sora-2 or sora-2-pro)
# SORA_MODEL=sora-2-pro

# =============================================
# Security (REQUIRED)
# =============================================
# Generate with: openssl rand -base64 32
JWT_SECRET=your_super_secret_jwt_key_at_least_32_chars

# =============================================
# Rate Limiting (optional)
# =============================================
# RATE_LIMIT_MAX=100
# RATE_LIMIT_WINDOW_MS=60000

# =============================================
# Storage (optional)
# =============================================
# STORAGE_BUCKET=onstage-assets
# MAX_FILE_SIZE_MB=10

# =============================================
# Logging (optional)
# =============================================
# LOG_LEVEL=info
