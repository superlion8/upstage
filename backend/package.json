    "@fastify/rate-limit": "^9.1.0",
    "@fastify/swagger": "^8.15.0",
    "@fastify/swagger-ui": "^4.1.0",
    "postgres": "^3.4.4",
    "redis": "^4.7.0",
    "zod": "^3.23.8",
    "nanoid": "^5.0.7",
    "bcryptjs": "^2.4.3",
    "dayjs": "^1.11.12",
    "dotenv": "^16.4.0"
