{
  "name": "onstage-backend",
  "version": "1.0.0",
  "description": "Onstage - AI-powered fashion content generation backend",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "test": "vitest",
